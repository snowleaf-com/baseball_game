{
  "name": "baseball-game-frontend",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "dependencies": {
    "axios": "1.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router": "7.0.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@types/node": "20.14.0",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "postcss": "8.4.32",
    "prettier": "3.2.5",
    "tailwindcss": "3.3.6",
    "typescript": "5.4.5",
    "vite": "5.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "prepare": "test -d ../.git && cd .. && ./frontend/node_modules/.bin/husky install .husky || echo 'Skipping husky install (no git repo)'"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "frontend/src/**/*.{json,css}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
